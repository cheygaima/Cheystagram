<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/pinkpurplegradient"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/userLayout"
        android:layout_width="333dp"
        android:layout_height="51dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="87dp"
        android:background="@android:color/background_light"
        app:boxStrokeColor="@android:color/darker_gray">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/username"
            style="@android:style/TextAppearance.Widget.PopupMenu.Small"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#00000000"
            android:hint="username"
            android:inputType="none"
            android:textColorHint="@android:color/white"
            android:textSize="12sp"
            android:textStyle="italic" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/passLayout"
        android:layout_width="333dp"
        android:layout_height="51dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/userLayout"
        android:layout_marginTop="150dp"
        android:background="@android:color/background_light">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/password"
            style="@android:style/TextAppearance.Widget.PopupMenu.Small"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#00000000"
            android:hint="password"
            android:inputType="textPassword"
            android:textColorHint="@android:color/holo_green_light"
            android:textSize="12sp"
            android:textStyle="italic" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/signupBtn"
        android:layout_width="333dp"
        android:layout_height="51dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="216dp"
        android:background="#5389ed"
        android:text="sign up "
        android:textColor="@android:color/white" />

</RelativeLayout>